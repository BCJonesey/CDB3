<%- model_class = @award.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:character_id) %>:</strong></dt>
  <dd><%= @award.character_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:approved_by_id) %>:</strong></dt>
  <dd><%= @award.approved_by_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:created_by_id) %>:</strong></dt>
  <dd><%= @award.created_by_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:comment) %>:</strong></dt>
  <dd><%= @award.comment %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount) %>:</strong></dt>
  <dd><%= @award.amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:currency_id) %>:</strong></dt>
  <dd><%= @award.currency_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              game_awards_path(@game), :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_game_award_path(@game,@award), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              game_award_path(@game,@award),
              :method => 'delete',
              :data => { :confirm => 'Are you sure?' },
              :class => 'btn btn-default btn-danger' %>
</div>
