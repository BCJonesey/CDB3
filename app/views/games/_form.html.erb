<%= form_for @game do |f| %>
<%= render :partial => 'shared/form_errors', :locals => {:item => @game} %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> /Game</legend>

    <div class="form-group">
      <%= f.label :name %>

        <%= f.text_field :name, :class => 'form-control' %>

    </div>

    <div class="form-group">
      <%= f.label :slug %>

        <%= f.text_field :slug, :class => 'form-control' %>

    </div>

    <div class="form-group">
      <%= f.label :side_effects %>
        <%= f.text_area :side_effects, :class => 'form-control' , :rows => '3' %>
    </div>

    <div class="form-check">
      <%= f.label :public, {}, class: "form-check-label" %>

        <%= f.check_box :public, :class => 'form-check-input' %>

    </div>

    <div class="form-group">
      <%= f.submit nil, :class => 'btn btn-default btn-primary' %>
      <%= link_to 'Cancel', games_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
