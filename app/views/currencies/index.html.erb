<h1>Currencys</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @currencies.each do |currency| %>
      <tr>
        <td><%= currency.id %></td>
        <td><%= link_to currency.name, game_currency_path(@game,currency) %></td>
        <td><%= currency.created_at %></td>
        <td>
          <%= link_to 'Edit', edit_game_currency_path(@game,currency), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', game_currency_path(@game,currency), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_game_currency_path(@game), :class => 'btn btn-primary' %>
