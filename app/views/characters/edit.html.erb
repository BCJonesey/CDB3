<%= javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/angularjs/1.2.12/angular.min.js' %>
<%= javascript_include_tag 'http://code.angularjs.org/1.2.12/angular-resource.js' %>
<%= javascript_include_tag 'http://code.angularjs.org/1.2.12/angular-route.js' %>
<%= javascript_include_tag "http://cdnjs.cloudflare.com/ajax/libs/restangular/1.3.1/restangular.js" %>
<%= javascript_include_tag 'https://dl.dropboxusercontent.com/u/1454343/bootstrap/assets/js/app.js' %>  

<%= javascript_include_tag 'https://dl.dropboxusercontent.com/u/1454343/bootstrap/assets/js/controllers.js' %>  

<% end %>


<div  ng-app="chareditApp">
<div ng-controller="SkillListCrl">
	Search: <input ng-model="query">
	<ul class="container">

		<li class="skill" ng-repeat="skill in skills | filter:query">
			<div class="skill-controls">
				<div class="skill-controls-plusMinus">
					<a class="glyphicon glyphicon-minus" ng-click="subtractRank(skill)" href="#"></a>
					<span class="skillRank">{{skill.rank}}</span>
					<a class="glyphicon glyphicon-plus" ng-click="addRank(skill)" href="#"></a>
				</div>
			</div>
			<div class="skill-info">
				<span class="skill-info-name h2">{{skill.name}}</span>
				<span class="skill-info-cost">{{getCost(skill)}}</span>
				<span class="skill-info-shortDescription">{{skill.summary}}</span>
				<span class="skill-info-moreInfo"><a href="#" class=""   ng-click="showModal(skill)"><i class="glyphicon glyphicon-info-sign"></i></a></span>

				



			</div>
			<ul class="skill-tags">
				<li ng-repeat="tag in skill.tags" href="#" class="label label-default">{{tag.name}}</li>
			</ul>
		</li>

	</ul> <!-- /container -->



</div>
</div>


<!-- Modal -->
<div id='more-info-modal' class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>




<style>
	.skill div{
		display:inline;
	}
	.skill-tags li{display:inline; margin-right:4px;}
</style>
