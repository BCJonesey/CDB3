<%= form_for [@game,@skill] do |f| %>
<%= render :partial => 'shared/form_errors', :locals => {:item => @skill} %>

    <legend><%= controller.action_name.capitalize %> /Skill</legend>


    <div class="form-group">
      <%= f.label :name %>
        <%= f.text_field :name, :class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :summary %>
        <%= f.text_field :summary, :class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :max_rank %>
        <%= f.number_field :max_rank, :class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
        <%= f.text_area :description, :class => 'form-control' , :rows => '10' %>

    </div>
    
    <div class="form-group">
      <%= f.label :rule %>
        <%= f.text_area :rule, :class => 'form-control' , :rows => '3' %>
    </div>
    
    
    <div class="form-group">
      <%= f.label :cost %>
        <%= f.text_area :cost, :class => 'form-control' , :rows => '3' %>
    </div>
    
    
    <div class="form-group">
      <%= f.submit nil, :class => 'btn btn-default btn-primary' %>
      <%= link_to 'Cancel', game_skills_path(@game), :class => 'btn' %>
    </div>
<% end %>
