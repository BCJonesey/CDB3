<!DOCTYPE html>
<html>
<head>
  <title>Cdb3</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% unless @user.nil? %>
  <p style="text-align: right;">Logged in as <%= @user.name %>; 
    <%= link_to "Logout", logout_path %></p>
<% end %>

<% unless flash[:alert].nil? %>
  <p class="error_message">Error: <%= flash[:alert] %></p>
<% end %>
<% if flash[:notice] %>
  <p class="notice_message"><%= flash[:notice] %></p>
<% end %>

<%= yield %>

</body>
</html>
