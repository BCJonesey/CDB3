<%= form_for [@game,@character], :html => { :class => 'form-horizontal' } do |f| %>
<%= render :partial => 'shared/form_errors', :locals => {:item => @character} %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> /Character</legend>

    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>
    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', game_characters_path(@game), :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
