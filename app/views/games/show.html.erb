<div class="row">
  <div class="span9">
    <h1><%= @game.name %> Dashboard</h2>
  </div>
</div>

<% if(@member == nil) %>
  <div class="row">
    <div class="span9">
    
    <div class="alert alert-success">
    <div id="flash_notice">You are not currently a member of this game. Becoming a member will allow you to create characters and register for events. This will also allow game admins to see your contact information.
<% @member = Member.new(:user_id => @logged_in_user.id, :game_id => @game.id) %>
<%= form_for [@game,@member], :html => { :class => 'form-horizontal' } do |f| %>
<%= render :partial => 'shared/form_errors', :locals => {:item => @member} %>
<%= f.hidden_field :game_id %>  
<%= f.hidden_field :user_id %>
    <div class="row">
    <div class="span9">
      <%= f.submit "Become a member!", :class => 'btn btn-primary' %>
    </div></div>

<% end %>

    </div>
  </div>
      
    </div>
  </div>
<% else %>

<div class="row">

<div class="span6">

<h2>Your Characters</h2>

<% @member.characters.each do |character| %>
<p><%= link_to character.name, game_character_path(@game,character) %></p>
<% end %>

<p><%= link_to "Create Character", new_game_character_path(@game) %></p>

</div>

<div class="span6">

<h2>Events</h2>

<ul>
<% @game.events.each do |event| %>
  <li><%= event.start_date %> <%= event.site %>
      <%= link_to "[View]", game_event_path(@game, event) %></li>
<% end %>
</ul>

<% if @logged_in_user.game_admin?(@game) %>
<%= link_to "New Event", new_game_event_path(@game) %>
<% end %>

</div>

</div>

<% if @logged_in_user.game_admin?(@game) %>

<div class="row">

<div class="span6">

<% unless @members.nil? %>

<h2>Game Members</h2>

<% @game.members.each do |member| %>
  <li><%= member.name %>
      <%= link_to "[View]", game_member_path(@game, member) %></li>
<% end %>
</ul>

<% end %>

</div>

<div class="span6">

<h2>Game Settings</h2>

</div>

</div>

<% end %>

<% end %>