</head>

<!-- ======== @Region: body ======== -->

<body class="page header-compact header-dark page-header-compact navbar-layout-default<%= @use_highlighted ? ' header-ontop header-transparent page-header-transparent-dark' : '' %>">


    <!-- ======== @Region: #header ======== -->
    <%= render 'layouts/header' %>
        <% if @use_highlighted %>
        <!-- ======== @Region: #highlighted ======== -->
        <div id="highlighted">
            <%= yield :highlighted_region %>
        </div>
        <% end %>

        <!-- ======== @Region: #content ======== -->
        <div id="content">
            <div class="container">
                <%= yield %>
            </div>
        </div>
        <%= render 'layouts/footer' %>
            <!--jQuery 3.2.1 via CDN -->
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
            <!-- Popper 1.9.3 via CDN, needed for Bootstrap Tooltips & Popovers -->
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.9.3/umd/popper.min.js"></script>

            <!-- Bootstrap v4.0.0-beta JS via CDN -->
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js"></script>


            <!-- JS plugins required on all pages NOTE: Additional non-required plugins are loaded ondemand as of AppStrap 2.5 To disable this and load plugin assets manually simple add data-plugins-manual=true to the body tag -->

            <!-- Le javascript
    ================================================== -->
            <!-- Placed at the end of the document so the pages load faster -->
            <script type="text/javascript">
                window.appStrapPluginUrls = {
                    "jPanelMenu/jquery.jpanelmenu.min.js": "<%= javascript_url 'appStrap/plugins/jPanelMenu/jquery.jpanelmenu.min.js' %>",
                    "bootstrap-hover-dropdown/bootstrap-hover-dropdown.min.js": "<%= javascript_url 'appStrap/plugins/bootstrap-hover-dropdown/bootstrap-hover-dropdown.min.js' %>"
                }
            </script>
            <%= javascript_include_tag "application" %>
                <%= javascript_include_tag "appStrap" %>
                    <%= yield :extra_js %>
</body>

</html>