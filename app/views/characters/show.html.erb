<h1><%= @character.name %></h1>



<div class="form-actions">
  <%= link_to 'Back', game_characters_path(@game), :class => 'btn'  %>
  <%= link_to 'Edit', edit_game_character_path(@game,@character), :class => 'btn' %>
  <%= link_to 'Delete', game_character_path(@game,@character), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>





<% @character.awards.approved.joins(:currency).select('currencies.id, currencies.short_name as name, sum(awards.amount) as sum').group('currencies.id,currencies.name').each do |award| %>
<div class="well well-small pull-left">
<%= award['sum'].to_s %><%= award['name'].to_s %>
</div>
<% end %>



<table class="table table-striped">
  <thead>
    <tr>
      <th><%= Award.human_attribute_name(:amount) %></th>
      <th>Currency</th>
      <th><%= Award.human_attribute_name(:comment) %></th>
      <th>Created By</th>
      <th>Approved By</th>
      <th><%= Award.human_attribute_name(:created_at) %></th>
    </tr>
  </thead>
  <tbody>
    <% @character.awards.approved.each do |award| %>
      <tr>
        <td><%= award.amount %></td>
        <td><%= award.currency.name %></td>
        <td><%= award.comment %></td>
        <td><%= award.created_by.name %></td>
        <td><%= award.approved_by.name %></td>
        <td><%= award.created_at %></td>
        <% if(@member.is_admin) %>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_game_award_path(@game,award), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      game_award_path(@game,award),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>