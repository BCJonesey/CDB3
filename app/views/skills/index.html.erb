<h1>Skills</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @skills.order(:id).each do |skill| %>
      <tr>
	<td><%= skill.id %></td>
        <td><%= link_to skill.name, game_skill_path(@game,skill) %></td>
        <td><%= skill.created_at %></td>
        <td>
          <%= link_to 'Edit', edit_game_skill_path(@game,skill), :class => 'btn btn-default btn-xs' %>
          <%= link_to 'Destroy', game_skill_path(@game,skill), :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => 'btn btn-default btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_game_skill_path(@game), :class => 'btn btn-default btn-primary' %>
