
<% content_for :highlighted_region do %>
<!-- Image Banner: Use the the data-bg-img functionality to create a simple image banner Use spacer classes to make the banner larger with padding, allows for easy responsive changes too see: elements-ctas.htm To make the banner full height/screen add the attributes: data-toggle="full-height" data-offset="#header" -->
<div class="bg-white overlay overlay-op-8 text-center px-3 py-5 py-lg-10 flex-valign" data-bg-img="<%= asset_url('darren_ninja.png') %>"
data-css='{"background-position": "right bottom"}'>

<% if current_user.nil? %>
<h2 class="display-4 text-white mt-7" data-animate="fadeIn" data-animate-delay="0.2">
    We're <span class="font-weight-bold">game</span> if you are!
</h2>
<h3 class="text-white font-weight-normal" data-animate="fadeIn" data-animate-delay="0.35">
    Come play with us
</h3>

<hr class="hr-grey w-20 mx-auto my-4 mb-5" data-animate="fadeIn" data-animate-delay="0.45" />
<div class="col-md-4 mx-auto" data-animate="fadeIn" data-animate-delay="0.55"> 
    <%= link_to new_user_path, class: "btn btn-xlg btn-rounded btn-primary mt-4" do %>
  Join LARP.ninja!
  <% end %>
</div>
<% else %>
<h2 class="display-4 text-white mt-7" data-animate="fadeIn" data-animate-delay="0.2">
    Hey <%= current_user.name %>!
</h2>
<% end %>
</div>


<% end %>


<div class="row">

<div class="col-md-6">

<h2>Pick a Game</h2>

<div>
<% @games.each do |game| %>

<div class="card text-white bg-white overlay overlay-op-8 text-center"  data-bg-img="<%= asset_url('after_dark.jpg') %>">
    <a href="<%= game_path(game) %>"

      <h2 class="card-title"><%= game.name %></h2>
      <p class="card-text">A New England horror game or some shit.</p>


    </a>
  </div>
<% end %>
</div>

</div>

<div class="col-md-6">

<h2>Upcoming Events</h2>

<div>
<% @events.each do |event| %>
  <p><%= link_to "#{event.start_date} #{event.game.name}", game_event_path(event.game, event) %> 
      @ <%= event.site %></p>
<% end %>
</div>

</div>

</div>

<div class="spacer" style="height: 2em">&nbsp;</div>

<% if current_user and current_user.global_admin? %>

<div class="row">

<div class="col-md-6">

<h2>Global Admin</h2>

<p><%= link_to "Administer Games", games_path %></p>
<p><%= link_to "Administer Users", users_path %></p>

</div>

<div class="col-md-6">
&nbsp;
</div>

</div>

<% end %>

