<%= form_for @game, :html => { :class => 'form-horizontal' } do |f| %>
<%= render :partial => 'shared/form_errors', :locals => {:item => @game} %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> /Game</legend>

    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :slug, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :slug, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :public, :class => 'control-label' %>
      <div class="controls">
        <%= f.check_box :public, :class => 'check_box' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', games_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
