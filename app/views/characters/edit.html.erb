<div  ng-app="chareditApp"><div ng-controller="SkillListCrl">



	Search: <input ng-model="query">
    <ul class="container">
	
    <li class="skill" ng-repeat="skill in skills | filter:query">
		<div class="skill-controls">
			<div class="skill-controls-plusMinus">
				<a class="glyphicon glyphicon-minus" ng-click="addRank(skill)" href="#"></a>
				<span class="skillRank">{{skill.rank}}</span>
				<a class="glyphicon glyphicon-plus" ng-click="addRank(skill)" href="#"></a>
			</div>
		</div>
		<div class="skill-info">
			<span class="skill-info-cost">13CP</span>
			<span class="skill-info-name">{{skill.name}}</span>
			<span class="skill-info-shortDescription">{{skill.summary}}</span>
			<span class="skill-info-moreInfo"><a href="#" class="" rel="popover" data-content="{{skill.description}}" data-original-title="{{skill.name}}"><i class="icon-info-sign"></i></a></span>
		</div>
		<ul class="skill-tags">
			<li ng-repeat="tag in skill.tags" href="#" class="label label-default">{{tag.name}}</li>
		</ul>
	</li>
    
    </ul> <!-- /container -->



</div></div>



		<style>
		.skill div{
			display:inline;
		}
    .skill-tags li{display:inline; margin-right:4px;}
	</style>
