<%= form_for [@game,@event], :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> /Event</legend>

    <div class="control-group">
      <%= f.label :game_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :game_id, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :start_date, :class => 'control-label' %>
      <div class="controls">
        <%= f.datetime_select :start_date, :class => 'datetime_select' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :end_date, :class => 'control-label' %>
      <div class="controls">
        <%= f.datetime_select :end_date, :class => 'datetime_select' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :site, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :site, :class => 'text_area' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :notes, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :notes, :class => 'text_area' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', game_events_path(@gamme), :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
