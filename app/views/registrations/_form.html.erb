<%= form_for [@game,@registration], :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> /Registration</legend>

    <div class="control-group">
      <%= f.label :event_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :event_id, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :member_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :member_id, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :character_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :character_id, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :is_paid, :class => 'control-label' %>
      <div class="controls">
        <%= f.check_box :is_paid, :class => 'check_box' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :is_present, :class => 'control-label' %>
      <div class="controls">
        <%= f.check_box :is_present, :class => 'check_box' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :is_prereged, :class => 'control-label' %>
      <div class="controls">
        <%= f.check_box :is_prereged, :class => 'check_box' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :setup_cleanup, :class => 'control-label' %>
      <div class="controls">
        <%= f.check_box :setup_cleanup, :class => 'check_box' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :cp_game_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :cp_game_id, :class => 'number_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', game_registrations_path(@game), :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
