<h1>Games</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.id %></td>
        <td><%= link_to game.name, game_path(game) %></td>
        <td><%= game.created_at %></td>
        <td>
          <%= link_to 'Edit', edit_game_path(game), :class => 'btn btn-default btn-xs' %>
          <%= link_to 'Destroy', game_path(game), :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => 'btn btn-default btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_game_path, :class => 'btn btn-default btn-primary' %>
