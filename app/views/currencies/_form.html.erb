<%= form_for [@game,@currency], :html => { :class => 'form-horizontal' } do |f| %>
<%= render :partial => 'shared/form_errors', :locals => {:item => @currency} %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> /Currency</legend>

    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :short_name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :short_name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :yearly_cap, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :yearly_cap, :class => 'number_field' %>
      </div>
    </div>
<%= f.hidden_field :game_id, :class => 'number_field' %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', game_currencies_path(@game), :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
